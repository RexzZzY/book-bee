<div class='container w-fit md:w-auto max-w-5xl mx-auto p-4'>

  <div class='grid grid-cols-4 grid-rows-6'>

    <div class='flex flex-col md:flex-row md:flex-wrap md:content-start col-span-full row-start-1 row-span-5'>
      <div class='w-full h-16 flex items-center p-2'>

        <div class='self-start flex-1'>
          <h1 class='text-lg'>Add Student</h1>
          <p class='text-xs text-gray-400'>Add a student to the cohort</p>
        </div>

      </div>

      <div class='w-full flex justify-center mt-2 border border-gray-400 rounded-md p-4 ml-2'>

        <div class='w-3/4'>
          <form action='/students' method='post' class='grid grid-cols-1 gap-3'>
            <label class='block'>
              <span class='text-gray-600'>Index No</span>
              <input type='text' name='indexNumber' required
                class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' />
            </label>
            <label class='block'>
              <span class='text-gray-600'>Name</span>
              <input type='text' name='name' required
                class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' />
            </label>
            <label class='block'>
              <span class='text-gray-600'>Grade</span>
              <input type='text' name='grade' required
                class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' />
            </label>
            <label class="block">
              <span class="text-gray-700">Gender</span>
              <select name="gender"
                class="block w-full mt-1 rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
                <option value="male">Male</option>
                <option value="female">Female</option>
              </select>
            </label>

            <button type='submit' class='w-full rounded-lg bg-gray-200 hover:bg-gray-100 p-2 mt-2'>Add Student</button>

          </form>
        </div>

      </div>

    </div>

    <div class='row-start-6 row-span-full col-span-full h-fit'>

    </div>

  </div>

</div>