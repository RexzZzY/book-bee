<div class='container w-fit md:w-auto max-w-5xl mx-auto p-4'>

  <div class='grid grid-cols-4 grid-rows-6'>

    <div class='flex flex-col md:flex-row md:flex-wrap md:content-start col-span-full row-start-1 row-span-5'>
      <div class='w-full h-16 flex items-center p-2'>

        <div class='self-start flex-1'>
          <h1 class='text-lg'>Add Book</h1>
          <p class='text-xs text-gray-400'>Add a book to the collection</p>
        </div>

      </div>

      <div class='w-full flex justify-center mt-2 border border-gray-400 rounded-md p-4 ml-2'>

        <div class='w-3/4'>
          <form action='/books' method='post' class='grid grid-cols-1 gap-3'>
            <label class='block'>
              <span class='text-gray-600'>Register No</span>
              <input type='number' name="registerNumber"
                class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' required />
            </label>
            <label class='block'>
              <span class='text-gray-600'>Title</span>
              <input type='text' name="title"
                class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' required />
            </label>
            <label class='block'>
              <span class='text-gray-600'>Author</span>
              <input type='text' name="author"
                class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' required />
            </label>
            <label class='block'>
              <span class='text-gray-600'>Code Number</span>
              <input type='text' name="codeNumber"
                class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' required />
            </label>
            <label class='block'>
              <span class='text-gray-600'>Register Date</span>
              <input type='date' name="registeredDate"
                class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' required />
            </label>

            <label class='block'>
              <span class='text-gray-600'>ISBN</span>
              <input type='text' name="ISBN"
                class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' />
            </label>
            <label class='block'>
              <span class='text-gray-600'>Publisher</span>
              <input type='text' name="publisher"
                class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' required />
            </label>
            <label class='block'>
              <span class='text-gray-600'>Published Year</span>
              <input type='text' name="publishedYear"
                class='mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' />
            </label>

            <button type="submit" class='w-full rounded-lg bg-gray-200 hover:bg-gray-100 p-2 mt-2'>Add Book</button>

          </form>
        </div>

      </div>

    </div>

    <div class='row-start-6 row-span-full col-span-full h-fit'>

    </div>

  </div>

</div>